<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wp.common.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="requestApi"
                android:text="请求接口" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="downloadFile"
                android:text="下载文件" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="loadNetImage"
                android:text="显示网络图片" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="loadLocalImage"
                android:text="显示本地图片" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="requestPermission"
                android:text="请求权限" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="imagesPreview"
                android:text="图片预览" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="share"
                android:text="三方分享" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.wp.commonlibrary.views.TestTextView
                    android:id="@+id/tv_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.wp.commonlibrary.views.ProgressImageView
                    android:id="@+id/iv_example"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
